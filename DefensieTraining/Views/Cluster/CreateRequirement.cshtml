@model RequirementViewModel

@{
    ViewData["Title"] = "CreateRequirement";
}

<h1>Create Requirement</h1>

<form asp-controller="Cluster" asp-action="CreateRequirement" method="post">
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
        <!-- Display validation errors for Name -->
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Description:</label>
        <textarea class="form-control" id="Description" name="Description">@Model.Description</textarea>
        <!-- Display validation errors for Description -->
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="SortTraining">Sort Training:</label>
        <select class="form-control" id="SortTraining" name="SortTraining">
            <option value="">Select Sort Training</option>
            @foreach (var sortTrainingOption in Model.SortTrainingOptions)
            {
                <option value="@sortTrainingOption.Value">@sortTrainingOption.Text</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="Amount">Amount:</label>
        <input type="number" class="form-control" id="Amount" name="Amount" value="@Model.Amount" />
        <!-- Display validation errors for Amount -->
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Time">Time:</label>
        <input type="number" class="form-control" id="Time" name="Time" value="@Model.TimeInSeconds" />
        <!-- Display validation errors for Time -->
        <span asp-validation-for="TimeInSeconds" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Requirement</button>
</form>
